<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryMaui.ModalAddClient"
             Title="ModalAddClient">
    <VerticalStackLayout>
        <Label Text="Welcome to .NET MAUI!"/>
        <Entry Placeholder="Введите ФИО" x:Name="full"/>
        <Entry Placeholder="Введите Паспорт" x:Name="pass"/>
        <Label Text="Введите дату рождения" />
        <DatePicker x:Name="birth"/>
        <Button Text="Добавить" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>