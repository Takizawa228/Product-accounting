<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InventoryMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InventoryMaui"
    Title="InventoryMaui">

    <ShellContent
        Title="Клиенты"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Продукция"
        ContentTemplate="{DataTemplate local:Next}"
        Route="Next"/>
    <ShellContent
        Title="Сотрудники"
        ContentTemplate="{DataTemplate local:NewProducts}"
        Route="NewProducts"/>
    <ShellContent
        Title="Отчет"
        ContentTemplate="{DataTemplate local:tra}"
        Route="tra"/>
</Shell>
